<ContentDialog
    x:Class="MediaBrowser.Dialogs.AboutDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MediaBrowser.Dialogs"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="About MediaBrowser"
    PrimaryButtonText="Rate"
    PrimaryButtonClick="ContentDialog_PrimaryButtonClick"
    SecondaryButtonText="Close"
    Background="#303952">

    <Grid>
        <StackPanel>
            <Image Source="/Images/logo.png" Height="80" Width="81"/>
            <Image Source="/Images/Logo banner.png" Height="50" Width="235" />
            <TextBlock Text="Version: 2" HorizontalAlignment="Center"/>
            <TextBlock Text="License: GPL-3" HorizontalAlignment="Center"/>
            <TextBlock Foreground="White" HorizontalAlignment="Center">
                <Hyperlink NavigateUri="https://github.com/v38armageddon/MediaBrowser">View on GitHub</Hyperlink>
            </TextBlock>
            <TextBlock Foreground="White" HorizontalAlignment="Center">
                <Hyperlink NavigateUri="https://gist.github.com/v38armageddon/d4b6a4a207d19a85c82ce102bd9f2864">Privacy Statement</Hyperlink>
            </TextBlock>
        </StackPanel>
    </Grid>
</ContentDialog>
